@inject SignInManager<IdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lagerverwaltung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
   


</head>
<body>

    <header>
        <div class="container">
            <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow align-content-start">
                <div class="container">

                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="rounded-circle float-left" src="~/Bilder/banner.png" height="30" />Lagerverwaltung
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                            </li>

                            <li class="nav-item">

                                <a class="nav-link text-dark" asp-area="" asp-controller="Ware" asp-action="Index"><i class="fa fa-pallet"></i> Übersicht</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Verwaltung" asp-action="Index"><i class="fa fa-cogs"></i> Verwaltung</a>
                            </li>
                        </ul>
                            <ul class="navbar-nav flex-grow-1 ml-auto">
                                @if (signInManager.IsSignedIn(User))
                                {
                                    <li class="nav-item">
                                        <form method="post" asp-action="Ausloggen" asp-controller="Account">
                                            <button type="submit" class="nav-link btn btn-link" style="width:auto">
                                                Ausloggen @User.Identity.Name
                                            </button>

                                        </form>

                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a asp-controller="Account" asp-action="Regestrieren" class="nav-link">Regestrieren</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                                    </li>
                                }

                            </ul>

                        </div>
                    </div>
                </nav>
            </div>

        </header>

        <div class="container">
            <main role="main" class="pb-3 pt-5 mt-3">

                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Lagerverwaltung - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> - <a asp-area="" asp-controller="Home" asp-action="Ueber">Über</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/font-awesome/js/all.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
    </html>
