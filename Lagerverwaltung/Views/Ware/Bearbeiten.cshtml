@model Lagerverwaltung.ViewModels.BearbeitenViewModel
@{
    ViewData["Title"] = "Bearbeiten";
}

    
        <div class="container">
            <h1>Bearbeiten</h1>
            <div class="card">
                <h4 class="card-header">
                    ID: @Model.Ware_Id
                </h4>
                <div class="card-body">
                    <ul class="list-group-flush">
                        <li class="list-group-item">
                            Beschreibung: @Model.Ware_Beschreibung           
                            <input asp-for="Ware_Beschreibung_NEU" class="form-control" placeholder="Neue Beschreibung" value="@Model.Ware_Beschreibung_NEU" />
                            <span asp-validation-for="Ware_Beschreibung_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Eingelagerte Menge: <span class="text-danger">@Convert.ToInt32(Model.Menge)</span>
                            <input asp-for="Menge_NEU" class="form-control" placeholder="Neue Menge" value="@Model.Menge_NEU" />
                            <span asp-validation-for="Menge_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Lagerplatz: <span class="text-danger ">@Model.Lagerplatz_Beschreibung</span>
                            <select asp-for="Lagerplatz_NEU" asp-items="@(new SelectList(Model.Lagerplatz_NEU,"Lagerplatz_Id", "Lagerplatz_Beschreibung"))" class="custom-select">
                            </select>
                            <span asp-validation-for="Lagerplatz_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Hersteller: <span class="text-danger ">@Model.Hersteller_Beschreibung</span>
                            <select asp-for="Hersteller_NEU" asp-items="@(new SelectList(Model.Hersteller_NEU,"Hersteller_Id", "Hersteller_Beschreibung"))" class="custom-select">
                            </select>
                            <span asp-validation-for="Hersteller_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Lieferant: <span class="text-danger ">@Model.Lieferant_Beschreibung</span>
                            <select asp-for="Lieferant_NEU" asp-items="@(new SelectList(Model.Lieferant_NEU,"Lieferant_Id", "Lieferant_Beschreibung"))" class="custom-select">
                            </select>
                            <span asp-validation-for="Lieferant_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Seriennummer: <span class="text-danger ">@Model.Seriennummer</span>
                            <input asp-for="Seriennummer_NEU" class="form-control" placeholder="Neue Seriennummer" value="@Model.Seriennummer_NEU" />
                            <span asp-validation-for="Seriennummer_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Modellnummer: <span class="text-danger ">@Model.Modellnummer</span>
                            <input asp-for="Modellnummer_NEU" class="form-control" placeholder="Neue Modellnummer" value="@Model.Modellnummer_NEU" />
                            <span asp-validation-for="Modellnummer_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Kategorie: <span class="text-danger ">@Model.Kategorie_Beschreibung</span>
                            <select asp-for="Kategorie_NEU" asp-items="@(new SelectList(Model.Kategorie_NEU,"Kategorie_Name", "Kategorie_Beschreibung"))" class="custom-select">
                            </select>
                            <span asp-validation-for="Kategorie_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Anschaffungskosten: <span class="text-danger ">@Model.Anschaffungskosten</span>
                            <input asp-for="Anschaffungskosten_NEU" class="form-control" placeholder="Neue Anschaffungskosten" value="@Model.Anschaffungskosten_NEU" />
                            <span asp-validation-for="Anschaffungskosten_NEU" class="text-danger"></span>
                        </li>
                        <li class="list-group-item">
                            Kostenstelle: <span class="text-danger ">@Model.Kostenstellennr</span>
                            <select asp-for="Kostenstelle_NEU" asp-items="@(new SelectList(Model.Kostenstelle_NEU,"Kostenstelle_Nr", "Kostenstelle_Beschreibung"))" class="custom-select">
                            </select>
                            <span asp-validation-for="Kostenstelle_NEU" class="text-danger"></span>
                        </li>

                                <div class="form-group, m-3">
                                    <input type="submit" value="Speichern" class="btn btn-danger" />
                                    <button asp-action="Index" class="btn btn-outline-primary">Abbrechen</button>
                                    
                                </div>
                            
                        </li>
                    </ul>
                    
                    
                    

            </div>
                <div class="card-footer text-muted">
                    Einlagerungsdatum: <span class="text-danger"> eingebucht von :  </span>
                </div>

            </div>

        </div>
