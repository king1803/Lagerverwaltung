@model Lagerverwaltung.ViewModels.RegestrierenViewModel
@{
    ViewData["Title"] = "Regestrieren";
}

<h1>Anwender Registrieren</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwort"></label>
                <input asp-for="Passwort" class="form-control" />
                <span asp-validation-for="Passwort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPasswort"></label>
                <input asp-for="ConfirmPasswort" class="form-control" />
                <span asp-validation-for="ConfirmPasswort" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Regestrieren</button>

        </form>
    </div>
</div>

