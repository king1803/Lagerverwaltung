
@model Lagerverwaltung.ViewModels.PasswortFestlegenViewModel
@{
    ViewData["Title"] = "Passwortfestlegen";
}

<h1>Passwortfestlegen</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="PasswortFestlegen">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User"></label>
                
                
                    <input asp-for="User" class="form-control" readonly />
                
                
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwort"></label>
                <input asp-for="Passwort" class="form-control" />
                <span asp-validation-for="Passwort" class="text-danger"></span>
            </div>
            
            
                <div class="form-group">
                    <label asp-for="ConfirmPasswort"></label>
                    <input asp-for="ConfirmPasswort" class="form-control" />
                    <span asp-validation-for="ConfirmPasswort" class="text-danger"></span>
                </div>
            
           
                <button  type="submit" class="btn btn-primary">Passwort festlegen</button>

            
            

        </form>
    </div>
</div>
