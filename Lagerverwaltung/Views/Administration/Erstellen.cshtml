@model Lagerverwaltung.ViewModels.RolleErstellenViewModel
@{
    ViewData["Title"] = "Erstellen";
}

<h1>Rolle Erstellen</h1>

<div class="row">
<div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RollenName"></label>
            <input asp-for="RollenName" class="form-control" />
            <span asp-validation-for="RollenName" class="text-danger"></span>
        </div>
        

        <button type="submit" class="btn btn-primary">Rolle Erstellen</button>

    </form>
</div>
</div>