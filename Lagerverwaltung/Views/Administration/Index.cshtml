@model Lagerverwaltung.ViewModels.UserVerwaltungViewModel  
@{
    ViewData["Title"] = "Index";
}

<h1>UserVerwaltung</h1>


<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="UserRollenBearbeiten">
            <div class="card text-center">
                <div class="card-header">
                   Alle User
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <div class="custom-control custom-checkbox">
                            <label class="custom-control-label" for="customCheck1">Test</label>
                            <input type="checkbox" class="custom-control-input" id="customCheck1">

                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </div> 

            

        </form>
    </div>
    <div class="col-md-4">
        <form method="post" asp-action="UserErstellen">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">User Erstellen</button>

        </form>
    </div>
</div>

