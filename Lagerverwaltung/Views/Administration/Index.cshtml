@model Lagerverwaltung.ViewModels.UserVerwaltungViewModel
@{
    ViewData["Title"] = "Index";

}

<h1>UserVerwaltung</h1>


<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="UserRollenBearbeiten">
            <div class="card">
                <div class="card-header text-center">
                    Alle User
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Admin</th>
                                <th scope="col">Zurücksetzen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Users.Count(); i++)
                            {
                                string Id = Model.Users[i].Name + "1";
                                
                            <tr>
                                
                                <th scope="row">@i</th>
                                <td>@Model.Users[i].Name
                                    <input type="hidden" asp-for="@Model.Users[i].Name" value="@Model.Users[i].Name" /></td>
                                <td>
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="Users[i].Admin" type="checkbox" class="custom-control-input" id="@Id">
                                        <label class="custom-control-label" for="@Id"></label>
                                    </div>
                                </td>
                                <td>
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="Users[i].Zurücksetzten" type="checkbox" class="custom-control-input" id="@Model.Users[i].Name" >
                                        <label class="custom-control-label" for="@Model.Users[i].Name"></label>
                                    </div>
                                </td>
                            </tr>


                            }


                        </tbody>
                    </table>

                    <div class="card-footer text-muted">
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </div>


            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form method="post" asp-action="UserErstellen">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" id="user"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary" id="erstellen">User Erstellen</button>

        </form>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {


           
            


            $("#ADMIN").attr("disabled", true);
            $("#ADMIN1").attr("disabled", true);



        });

    </script>
}
